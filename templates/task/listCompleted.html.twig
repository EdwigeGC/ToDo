{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
    <div class="row">
        <a href="{{ path('task_create') }}" class="btn btn-info center">Créer une tâche</a>
    </div>
    <div class="row">
        {% for task in tasks %}
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h4 class="pull-right">
                            <span class="glyphicon glyphicon-ok"></span>
                        </h4>
                        <h4><a href="{{ path('task_edit', {'slug' : task.slug }) }}">{{ task.title }}</a></h4>
                        <p class="text-blue">Créée par {{ task.users.username }}, le {{ task.createdAt|date("d/m/Y à H:i:s") }} </p>
                        <p>{{ task.content }}</p>
                    </div>
                    <div>
                        <form action="{{ path('task_toggle', {'slug' : task.slug }) }}">
                            <button class="btn btn-success btn-sm pull-right">Marquer non terminée</button>
                        </form>
                        {% if app.user is same as task.users %}
                        <form action="{{ path('task_delete', {'slug' : task.slug }) }}">
                            <button class="btn btn-danger btn-sm pull-right">Supprimer</button>
                        </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pas encore de tâche enregistrée. <a href="{{ path('task_create') }}" class="btn btn-warning pull-right">Créer une tâche</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
